{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"rootDir": ".",
		"baseUrl": "./src",
		"module": "es6",
		"target": "es5",
		"noImplicitAny": true,
		"importHelpers": true
	},
	"include": ["src/**/*"]
}
